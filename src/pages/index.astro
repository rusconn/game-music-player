---
import Layout from "../layouts/Layout.astro";
import MusicPlayer from "../components/music-player.astro";
import MusicUploader from "../components/music-uploader.astro";
import MusicTabulizer from "../components/music-tabulizer.astro";
---

<Layout>
  <main>
    <div class="music-player">
      <div class="container">
        <MusicPlayer />
      </div>
    </div>
    <div class="music-manager">
      <div class="container">
        <MusicUploader />
        <MusicTabulizer />
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    display: grid;
    grid-template-rows: auto 1fr;
    block-size: 100svh;
  }

  .music-player {
    max-inline-size: 100svw;
    background-color: #1b1b1b;
    color: #e2e2e2;
    overflow-block: auto;
    scrollbar-color: #1b1b1b transparent;
    scrollbar-gutter: stable both-edges;
  }
  :global(.mobile) .music-player {
    background-color: #000;
  }

  .music-manager {
    max-inline-size: 100svw;
    overflow-inline: hidden;
    overflow-block: auto;
    scrollbar-color: #050505 transparent;
    scrollbar-gutter: stable both-edges;
  }

  .container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-inline: auto;
    inline-size: clamp(20rem, 100%, 30rem);
    padding: 1.25rem;
  }
</style>
