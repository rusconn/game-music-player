---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"div">;

const { props } = Astro;
---

<media-session {...props}>
  <audio src="5-seconds-of-silence.mp3" loop></audio>
</media-session>

<script>
  import { MediaSessionElement } from "./media-session";

  if (!customElements.get("media-session")) {
    customElements.define("media-session", MediaSessionElement);
  }
</script>
